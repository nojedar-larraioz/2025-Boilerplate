{
  "name": "2026-boilerplate",
  "description": "a local-first web app boilerplate for 2026",
  "author": "BishopZ",
  "private": true,
  "version": "1.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bishopz/2026-boilerplate"
  },
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src/server -x tsx --env-file .env src/server/main.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "preview": "vite preview",
    "start": "NODE_ENV=production tsx src/server/main.ts",
    "type-check": "tsc --noEmit",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open"
  },
  "dependencies": {
    "@chakra-ui/react": "3.27.1",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@reduxjs/toolkit": "2.9.0",
    "cookie-parser": "1.4.7",
    "crypto-js": "4.2.0",
    "ejs": "3.1.10",
    "express": "5.1.0",
    "express-session": "1.18.2",
    "framer-motion": "12.23.24",
    "next-themes": "0.4.6",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-error-boundary": "6.0.0",
    "react-icons": "5.5.0",
    "react-redux": "9.2.0",
    "react-router-dom": "7.6.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite-express": "0.21.1"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@stylistic/eslint-plugin": "4.4.1",
    "@types/cookie-parser": "1.4.9",
    "@types/crypto-js": "4.2.2",
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.3",
    "@types/express-session": "1.18.2",
    "@types/node": "24.7.2",
    "@types/passport": "1.0.17",
    "@types/passport-local": "1.0.38",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.0.4",
    "cypress": "14.0.2",
    "eslint": "9.37.0",
    "eslint-plugin-react-dom": "1.48.4",
    "eslint-plugin-react-hooks": "7.0.0",
    "eslint-plugin-react-refresh": "0.4.23",
    "eslint-plugin-react-x": "1.48.4",
    "globals": "16.4.0",
    "nodemon": "3.1.10",
    "typescript-eslint": "8.46.1",
    "vite": "7.1.12",
    "vite-tsconfig-paths": "5.1.4"
  },
  "engines": {
    "node": "22.20.0",
    "npm": "11.6.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
